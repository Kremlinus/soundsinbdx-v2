<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= form_tag event_filter_url do %>
   <%= select_tag(:price, options_for_select(filter_array['price'], params[:price] ||= 'all')) %>
   <%= submit_tag 'Recherche' %>
<% end %>

<% if @events.count <= 0 %>
  Aucun r√©sultat
<% else %>
   <table>
     <thead>
       <tr>
         <th>Name</th>
         <th>Description</th>
         <th>Date</th>
         <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @events.each do |event| %>
         <tr>
           <td><%= event.name %></td>
           <td><%= event.description %></td>
           <td><%= event.date %></td>
           <td><%= link_to 'Show', event_url(event.slug) %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
<% end %>
