<section class="landingSect-container events">

   <!-- Title -->
   <div class="landingSect-txt">
      <h2 class="title">Les <strong>événements</strong> de la semaine </h2>
   </div>

   <!-- Slider -->
   <div class="landingSect-slider" data-slider-events>

      <% @events.first(5).each do |event| %>

         <div class="landingSect-slider_item">
            <%= link_to event_url(event.slug) do %>
            <div class="cards_img">
               <%= image_tag event.image %>
            </div>

            <div class="cards_infos">

               <span class="cards_infos-top">
                  <h2 class="name"><%= event.name %></h2>
                  <p class="date">le <%= event.date.strftime "%d %b" %></p>
               </span>
               <span class="cards_infos-bottom">
                  <p class="time"> à partir de <%= number_to_currency(event.price, unit: "") %>€</p>
                  <p class="place">
                     <% begin %>
                        @<%= event.socials.where(label: "map")[0].link %>
                     <% rescue %>
                      Lieu secret
                     <% end %>
                  </p>
               </span>

            </div>
            <% end %>
         </div>

      <% end %>

   </div>

</section>
