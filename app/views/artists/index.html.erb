<% content_for :meta_title, "Liste des artistes" %>
<% content_for :meta_description, "Retrouvez la liste des meilleurs artistes sur la scène Bordelaise, sélectionnées par l'équipe de Sounds In Bordeaux !" %>

<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Baseline</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.baseline %></td>
        <td><%= artist.description %></td>
        <td><%= link_to 'Show', artist_url(artist.slug) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
